<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar')%>

<div class="container mt-4">
  <div class="row">
    <% for (let item of products) { %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="<%= item.img %>" class="card-img-top" alt="<%= item.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <h6 class="text-muted">â‚¹ <%= item.price.toLocaleString() %></h6> 
            <p class="card-text"><%= item.desc %></p>
            <a href="/products/<%=item.id%>" class="btn btn-info">View</a>
            <form class="d-inline-block" action="/products/<%=item.id%>?_method=DELETE" method="POST">
              <!-- to delete the product we need to create a form in index section -->
               <button class="btn btn-sm btn-danger ">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
</body>
</html>