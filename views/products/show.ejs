<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar')%>
<div class="row">
    <div class="col-lg-6 mt-3">
        <!-- displaying message flash-->
        <div class="mb-3">
            <% if(msg && msg.length){ %> 
                <%= msg %>
            <%} %>
        </div>
      
        <div class="card h-50 shadow-sm">
        <img src="<%= foundProduct.img %>" class="card-img-top" alt="<%= foundProduct.name %>">
        <div class="card-body">
            <h5 class="card-title"><%= foundProduct.name %></h5>
            <h6 class="text-muted">â‚¹ <%= foundProduct.price.toLocaleString() %></h6>
            <p class="card-text"><%= foundProduct.desc %></p>
            <a href="#" class="btn btn-sm btn-secondary">Add Cart</a>
            <a href="#" class="btn btn-sm btn-primary">Buy Product</a>
            <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-sm btn-dark">Edit</a>
        </div>
        </div>
    </div>
    <div class="col-lg-6">
        <h1 class="display">Reviews</h1>
        <form action="/products/<%=foundProduct._id%>/review" method="POST">
            <div class="mb-3">
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>

            <div class="mb-3">
                <label for="form-label" for="review"> Comment :</label>
                <textarea name="comment" id="review" rows="5"></textarea>
            </div>      
            <button class="btn btn-sm btn-success">Add Review</button>     
        </form>
        <!-- Populating the review -->
         <div class="my-3">
            <%for(let review of foundProduct.reviews){%>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                            <p class="starability-result" data-rating="<%=review.rating%>">
                                Rated: <%=review.rating%>
                            </p>
                        <p class="card-text">Comment :<%= review.comment%></p>
                        <p>
                            <%if(review.createdAt){%>
                            <%= review.createdAt.toDateString()%>
                            <%}%>
                        </p>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            <%}%>
         </div>
    </div>
</div>
</body>
</html>